@model Vildy.Models.Movie

@{

	ViewBag.Title = Model.Name;
	Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>
	@Model.Name
</h2>

<ul>
	<li>Release Date: @Model.ReleaseDate.ToString("MM/dd/yyyy")</li>
	<li>Date Added: @Model.DateAdded.ToString("MM/dd/yyyy")</li>
	<li>Genre: @Model.MovieGenreType.Name</li>
	<li>Number in Stock: @Model.InStock</li>
</ul>
